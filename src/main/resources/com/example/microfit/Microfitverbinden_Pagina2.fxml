      <ComboBox layoutX="84.0" layoutY="355.0" prefHeight="30.0" prefWidth="166.0" promptText="Selecteer je Microfit" style="-fx-background-color: #2b2d42; -fx-font-size: 14px; -fx-text-fill: white; -fx-background-radius: 5px;" />

