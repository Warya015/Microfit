   <!-- Hoofd container (VBox) voor layout -->
   <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">

      <!-- Titel van de MicroFit Pagina -->
      <Text style="-fx-font-family: 'Roboto', sans-serif; -fx-font-size: 32px; -fx-fill: #ffffff;" text="MicroFit" />

      <!-- Informatie voor het Verbinden van MicroFit -->
      <Text style="-fx-font-family: 'Roboto', sans-serif; -fx-font-size: 14px; -fx-fill: #b9bbbe;" text="Verbind je MicroFit door het juiste apparaat te selecteren." wrappingWidth="300" />

